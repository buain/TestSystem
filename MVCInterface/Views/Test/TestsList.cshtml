@model IEnumerable<MVCInterface.Models.Test>
@{
    ViewBag.Title = "TestsList";
}

<h2>TestsList</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id_Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeForTest)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeForTest)
            </td>
            <td>
                @Html.ActionLink("Order", "MakeOrder", new { id = item.Id })
            </td>
        </tr>
    }

</table>